<h3 class="ui header">{{t "forms.i-i-s-postamat-novyjj-постамат-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерПост
      class=(if (v-get validationModel "номерПост" "isInvalid") "error")
      label=(t "forms.i-i-s-postamat-novyjj-постамат-e.номерПост-caption")
      data-test-i-i-s-postamat-novyjj-постамат-e-номерПост=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерПост" "message")}}
  </div>
  <div class="field" data-test-i-i-s-postamat-novyjj-постамат-e-статПост="true">
    <label>{{t "forms.i-i-s-postamat-novyjj-постамат-e.статПост-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-postamat-novyjj-стат-пост")
      value=model.статПост
      class=(if (v-get validationModel "статПост" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "статПост" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat-novyjj-постамат-e.адрес-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.адрес
      displayAttributeName="адрес"
      autocomplete=true
      relationName="адрес"
      projection="АдресL"
      title=(t "forms.i-i-s-postamat-novyjj-постамат-e.адрес-caption")
      readonly=readonly
      componentName="адресLookup"
      class=(if (v-get validationModel "адрес" "isInvalid") "error")
      data-test-i-i-s-postamat-novyjj-постамат-e-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адрес" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.адрес.службаДоставки.наименование
      class=(if (v-get validationModel.адрес.службаДоставки "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-postamat-novyjj-постамат-e.адрес.службаДоставки.наименование-caption")
      data-test-i-i-s-postamat-novyjj-постамат-e-адрес-службаДоставки-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.адрес.службаДоставки "наименование" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat-novyjj-постамат-e.ячейка-caption"}}</label>
    {{flexberry-groupedit
      componentName="ячейкаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.ячейка
      content=model.ячейка
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "ячейка" "isInvalid") "error")
      data-test-i-i-s-postamat-novyjj-постамат-e-ячейка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ячейка" "message")}}
  </div>
</form>
