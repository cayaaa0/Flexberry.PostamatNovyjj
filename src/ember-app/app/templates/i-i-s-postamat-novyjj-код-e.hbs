<h3 class="ui header">{{t "forms.i-i-s-postamat-novyjj-код-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сгенКод
      class=(if (v-get validationModel "сгенКод" "isInvalid") "error")
      label=(t "forms.i-i-s-postamat-novyjj-код-e.сгенКод-caption")
      data-test-i-i-s-postamat-novyjj-код-e-сгенКод=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сгенКод" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat-novyjj-код-e.получатель-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.получатель
      displayAttributeName="фИО"
      autocomplete=true
      relationName="получатель"
      projection="ПолучательL"
      title=(t "forms.i-i-s-postamat-novyjj-код-e.получатель-caption")
      readonly=readonly
      componentName="получательLookup"
      class=(if (v-get validationModel "получатель" "isInvalid") "error")
      data-test-i-i-s-postamat-novyjj-код-e-получатель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "получатель" "message")}}
  </div>
</form>
